<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".GameActivity">

    <Button
        android:id="@+id/home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_18dp"
        android:backgroundTint="@color/red"
        android:text="@string/home_button_text"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/playing_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@id/button_higher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_one"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:layout_margin="@dimen/card_margin"
                android:backgroundTint="@color/green"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:layout_constraintBottom_toTopOf="@+id/card_view_four"
                app:layout_constraintEnd_toStartOf="@+id/card_view_two"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/image_view_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/default_description"
                    tools:src= "@drawable/hearts_1"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_two"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:backgroundTint="@color/green"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:layout_constraintBottom_toTopOf="@+id/card_view_five"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/image_view_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/default_description"
                    tools:src= "@drawable/backside_card"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_three"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:backgroundTint="@color/green"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:layout_constraintBottom_toTopOf="@+id/card_view_six"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/card_view_two"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/image_view_three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/default_description"
                    tools:src= "@drawable/backside_card"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_four"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:backgroundTint="@color/green"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/card_view_five"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/image_view_four"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/default_description"
                    tools:src= "@drawable/backside_card"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_five"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:backgroundTint="@color/green"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/image_view_five"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/default_description"
                    tools:src= "@drawable/backside_card"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_six"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:backgroundTint="@color/green"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/card_view_five"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/image_view_six"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/default_description"
                    tools:src= "@drawable/backside_card"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_seven"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:backgroundTint="@color/green"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/card_view_eight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_view_four">

                <ImageView
                    android:id="@+id/image_view_seven"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/default_description"
                    tools:src= "@drawable/backside_card"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_eight"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:backgroundTint="@color/green"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_view_five">

                <ImageView
                    android:id="@+id/image_view_eight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/default_description"
                    tools:src= "@drawable/backside_card"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_nine"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:backgroundTint="@color/green"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/card_view_eight"
                app:layout_constraintTop_toBottomOf="@+id/card_view_six">

                <ImageView
                    android:id="@+id/image_view_nine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/default_description"
                    tools:src= "@drawable/backside_card"/>

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/button_higher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_48dp"
        android:backgroundTint="@color/black"
        android:text="@string/higher_button_text"
        android:textColor="@color/bright_green"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/draw_pile"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_lower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_48dp"
        android:backgroundTint="@color/black"
        android:text="@string/lower_button_text"
        android:textColor="@color/red"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/draw_pile"
        app:layout_constraintEnd_toEndOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/draw_pile"
        android:layout_width="@dimen/draw_pile_width"
        android:layout_height="@dimen/draw_pile_height"
        android:backgroundTint="@color/green"
        app:cardElevation="@dimen/no_elevation"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playing_field">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">


            <androidx.cardview.widget.CardView
                android:id="@+id/draw_pile_bottom_card"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:layout_marginTop="@dimen/elevation_effect_margin_height"
                android:layout_marginEnd="@dimen/elevation_effect_margin_width"
                android:backgroundTint="@color/green"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/no_elevation"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/image_bottom_of_draw_pile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/default_description"
                    tools:src="@drawable/backside_card" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/draw_pile_top_card"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:backgroundTint="@color/green"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/no_elevation"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/image_draw_pile_top_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/default_description"
                    tools:src="@drawable/backside_card" />
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_view_cards_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_18dp"
        android:text="@string/cards_left_text"
        android:textColor="@color/light_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/draw_pile" />

    <TextView
        android:id="@+id/text_view_card_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_4dp"
        android:layout_marginTop="@dimen/margin_8dp"
        tools:text="@string/default_card_count"
        android:textColor="@color/light_gray"
        app:layout_constraintStart_toEndOf="@id/text_view_cards_left"
        app:layout_constraintTop_toBottomOf="@+id/draw_pile" />


</androidx.constraintlayout.widget.ConstraintLayout>